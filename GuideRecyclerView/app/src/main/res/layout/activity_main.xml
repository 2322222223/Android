<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ljf.guiderecyclerview.GuideRecyclerView
        android:id="@+id/guiderecyclerview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="gone" />

    <com.ljf.guiderecyclerview.GuideSlideView
        android:id="@+id/guideslideview"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <com.ljf.guiderecyclerview.GuideSlideView2
        android:id="@+id/guideslideview2"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />


</LinearLayout>
